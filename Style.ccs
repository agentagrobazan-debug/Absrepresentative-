:root {
    --font-serif: 'Cormorant Garamond', Georgia, serif;
    --font-sans: 'Inter', -apple-system, sans-serif;
    --color-text: #1a1a1a;
    --color-text-light: #666;
    --color-text-muted: #999;
    --color-accent: #c9a227;
    --color-accent-dark: #a88420;
    --color-bg: #fff;
    --color-bg-warm: #faf9f7;
    --color-border: #e5e5e5;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: var(--font-sans);
    color: var(--color-text);
    line-height: 1.6;
    background: var(--color-bg);
    -webkit-font-smoothing: antialiased;
}

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

h1, h2, h3, h4 {
    font-family: var(--font-serif);
    font-weight: 500;
    line-height: 1.2;
}

h1 {
    font-size: 3rem;
}

h2 {
    font-size: 2.25rem;
}

h3 {
    font-size: 1.5rem;
}

/* Navigation */
.navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: var(--color-bg);
    z-index: 100;
    border-bottom: 1px solid var(--color-border);
}

.navbar .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
}

.nav-links-left {
    display: flex;
    gap: 2rem;
}

.nav-links-left a {
    text-decoration: none;
    color: var(--color-text-light);
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    transition: color 0.3s;
}

.nav-links-left a:hover {
    color: var(--color-text);
}

.logo img {
    height: 50px;
    width: auto;
}

/* Hero */
.hero {
    padding-top: 80px;
    min-height: 100vh;
    display: flex;
    align-items: center;
}

.hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
}

.hero-content h1 {
    margin-bottom: 1.5rem;
    font-weight: 600;
}

.hero-lead {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: 1rem;
    font-weight: 400;
}

.hero-sub {
    font-size: 1rem;
    color: var(--color-text-muted);
    margin-bottom: 2.5rem;
    line-height: 1.6;
}

.btn-outline {
    display: inline-block;
    padding: 1rem 2rem;
    border: 1px solid var(--color-text);
    color: var(--color-text);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    transition: all 0.3s;
}

.btn-outline:hover {
    background: var(--color-text);
    color: var(--color-bg);
}

.hero-image img {
    width: 100%;
    height: auto;
    display: block;
}

/* Sections */
section {
    padding: 5rem 0;
}

.section-header {
    margin-bottom: 3rem;
}

.section-header.centered {
    text-align: center;
}

.section-header.centered .section-lead {
    margin-left: auto;
    margin-right: auto;
}

.section-label {
    display: block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--color-text-muted);
    margin-bottom: 1rem;
}

.section-lead {
    font-size: 1.125rem;
    color: var(--color-text-light);
    max-width: 600px;
    margin-top: 1rem;
}

/* What is */
.what-is {
    background: var(--color-bg-warm);
}

.what-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
}

.what-col h3 {
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
}

.what-col ul {
    list-style: none;
}

.what-col li {
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--color-border);
    font-size: 0.95rem;
    line-height: 1.6;
}

.what-col.is-not li {
    color: var(--color-text-light);
}

.principle {
    margin-top: 2rem;
    padding: 1.5rem;
    background: var(--color-text);
    color: var(--color-bg);
    font-family: var(--font-serif);
    font-size: 1.125rem;
}

/* Structure */
.stages {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
}

.stage {
    padding: 2rem;
    border: 1px solid var(--color-border);
    background: var(--color-bg);
}

.stage.featured {
    border-color: var(--color-accent);
    box-shadow: 0 15px 35px rgba(0,0,0,0.08);
}

.stage-num {
    display: block;
    font-family: var(--font-serif);
    font-size: 2rem;
    color: var(--color-accent);
    margin-bottom: 1rem;
}

.stage h3 {
    margin-bottom: 1rem;
    font-size: 1.25rem;
}

.stage p {
    font-size: 0.95rem;
    color: var(--color-text-light);
    margin-bottom: 1.5rem;
}

.stage ul {
    list-style: none;
    margin-bottom: 1.5rem;
}

.stage li {
    padding: 0.25rem 0;
    font-size: 0.9rem;
    color: var(--color-text-light);
}

.stage li:before {
    content: "â€” ";
    color: var(--color-accent);
}

.link-download {
    color: var(--color-accent-dark);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s;
}

.link-download:hover {
    border-bottom-color: var(--color-accent-dark);
}

.stage-note {
    font-size: 0.875rem !important;
    font-style: italic;
    color: var(--color-text) !important;
}

.structure-principle {
    text-align: center;
    font-family: var(--font-serif);
    font-size: 1.5rem;
    font-style: italic;
    letter-spacing: 0.5px;
    color: var(--color-text);
}

/* Process */
.process-list {
    max-width: 800px;
}

.process-item {
    display: flex;
    gap: 2rem;
    padding: 2rem 0;
    border-bottom: 1px solid var(--color-border);
}

.process-num {
    font-family: var(--font-serif);
    font-size: 1.5rem;
    color: var(--color-accent);
    min-width: 2rem;
}

.process-content h4 {
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
}

.process-content p {
    font-size: 0.95rem;
    color: var(--color-text-light);
}

/* Benefits */
.benefits {
    background: var(--color-bg-warm);
}

.benefits-tabs {
    display: flex;
    gap: 2rem;
    margin-bottom: 3rem;
    border-bottom: 1px solid var(--color-border);
}

.tab-btn {
    padding: 1rem 0;
    background: none;
    border: none;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-text-muted);
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: all 0.3s;
}

.tab-btn.active {
    color: var(--color-text);
    border-bottom-color: var(--color-accent);
}

.tab-content {
    display: none;
}

.tab-content.active {
    display: block;
}

.benefits-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 3rem;
}

.benefit-item h4 {
    margin-bottom: 0.75rem;
    font-size: 1.125rem;
}

.benefit-item p {
    font-size: 0.95rem;
    color: var(--color-text-light);
}

/* Team */
.team {
    background: var(--color-bg-warm);
}

.team-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
}

.team-member h3 {
    font-size: 1.5rem;
    margin-bottom: 0.25rem;
}

.role {
    display: block;
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.team-member ul {
    list-style: none;
    margin-bottom: 1.5rem;
}

.team-member li {
    padding: 0.5rem 0;
    font-size: 0.9rem;
    color: var(--color-text-light);
    border-bottom: 1px solid var(--color-border);
}

.role-desc {
    font-style: italic;
    color: var(--color-text);
    margin-bottom: 1.5rem;
    font-size: 0.95rem;
}

.email {
    color: var(--color-accent-dark);
    text-decoration: none;
    font-size: 0.875rem;
    font-weight: 500;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s;
}

.email:hover {
    border-bottom-color: var(--color-accent-dark);
}

/* Contact */
.contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 6rem;
}

.contact-lead {
    font-size: 1.125rem;
    color: var(--color-text-light);
    margin-bottom: 3rem;
}

.contact-emails {
    margin-bottom: 3rem;
}

.email-block {
    margin-bottom: 2rem;
}

.email-block .label {
    display: block;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
}

.email-block a {
    color: var(--color-text);
    text-decoration: none;
    font-size: 1.125rem;
    font-weight: 500;
    border-bottom: 1px solid transparent;
    transition: border-color 0.3s;
}

.email-block a:hover {
    border-bottom-color: var(--color-text);
}

.linkedin {
    color: var(--color-accent-dark);
    text-decoration: none;
    font-weight: 500;
    font-size: 0.875rem;
}

.contact-form {
    padding: 2.5rem;
    background: var(--color-bg-warm);
    border: 1px solid var(--color-border);
}

.contact-form h3 {
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
}

.contact-form > p {
    color: var(--color-text-light);
    font-size: 0.9rem;
    margin-bottom: 2rem;
}

.form-group {
    margin-bottom: 1rem;
}

.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-bottom: 1rem;
}

.contact-form input,
.contact-form textarea {
    width: 100%;
    padding: 0.875rem;
    border: 1px solid var(--color-border);
    font-family: var(--font-sans);
    font-size: 0.9rem;
    background: var(--color-bg);
    transition: border-color 0.3s;
}

.contact-form input:focus,
.contact-form textarea:focus {
    outline: none;
    border-color: var(--color-accent);
}

.contact-form textarea {
    min-height: 120px;
    resize: vertical;
    margin-bottom: 1rem;
}

.btn-submit {
    width: 100%;
    padding: 1rem;
    background: var(--color-text);
    color: var(--color-bg);
    border: none;
    font-size: 0.875rem;
    font-weight: 500;
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: background 0.3s;
}

.btn-submit:hover {
    background: var(--color-accent-dark);
}

/* Footer */
footer {
    padding: 2rem 0;
    border-top: 1px solid var(--color-border);
    text-align: center;
}

footer p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
}

/* Responsive */
@media (max-width: 968px) {
    .hero-grid,
    .what-grid,
    .stages,
    .benefits-grid,
    .team-grid,
    .contact-grid {
        grid-template-columns: 1fr;
    }

    .hero {
        padding-top: 100px;
    }

    .hero-grid {
        gap: 2rem;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        font-size: 1.75rem;
    }

    .nav-links-left {
        display: none;
    }

    .stages {
        gap: 1.5rem;
    }

    .stage.featured {
        order: -1;
    }

    .form-row {
        grid-template-columns: 1fr;
    }

    .contact-grid {
        gap: 3rem;
    }

    .hero-image {
        order: -1;
    }
}
